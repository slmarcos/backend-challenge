{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@/tests/*": [
        "../tests/*"
      ],
      "@/*": [
        "*"
      ]
    },
    "rootDirs": [
      "src",
      "tests"
    ],
    "esModuleInterop": true,
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": []
}